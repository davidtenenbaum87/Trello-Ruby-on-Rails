<div class="container">
  <% if flash[:notice] %>
    <br>
    <div class="notice alert_box"> <i class="material-icons alert_box">warning</i> <%= flash[:notice] %></div>
  <% end %>
</div>

<div class="container"> <br>
<%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= button_tag(type: 'submit', class: "btn deep-purple darken-4") do %>
      <i class="material-icons right">send</i> Sign In
    <% end %>
  <% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>

</div>