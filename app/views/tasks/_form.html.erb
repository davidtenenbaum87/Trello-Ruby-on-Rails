<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%# Insert dropdown of Status here... %>
  <%= f.collection_select :status_id, Status.all, :id, :status, { prompt: "Choose a Status" }, class: "browser-default" %>
  <%= f.collection_select :user_id, User.all, :id, :name, { prompt: "Assign a User" }, class: "browser-default" %>
  <%= f.hidden_field :project_id, :value => @project.id %>
  <%= f.submit %>
<% end %>

